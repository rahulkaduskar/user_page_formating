<%= form_for(@stylesheet, url: {action: "create_update"}, method: 'Patch', :html => { id: "css_form"} ) do |f| %>
  <div class="field">
    <%= f.label :family %><br>
    <%= f.select :family, Stylesheet::FAMILY_LIST, selected: @stylesheet.family %>
  </div>
  <div class="field">
    <%= f.label :size %><br>
    <%= f.select :size, (5..30), selected: @stylesheet.size %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color, class: 'colorpicker', value: @stylesheet.color  %>
  </div>
  <div class="field">
    <%= f.label :custom %><br>
    <%= f.text_area :custom %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
  </div>
<% end %>
